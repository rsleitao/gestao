APP_NAME="Gestão Processos"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Lisbon
APP_URL=http://localhost

APP_LOCALE=pt
APP_FALLBACK_LOCALE=pt
APP_FAKER_LOCALE=pt_PT

# Base de dados MySQL (XAMPP)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=gestao
DB_USERNAME=root
DB_PASSWORD=

# Cache e sessão
CACHE_STORE=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Filas (para escalar depois)
QUEUE_CONNECTION=database

# Mail (esqueci-me da password, etc.)
# Por defeito "log" = emails não são enviados, o conteúdo vai para storage/logs/laravel.log
# Para enviar a sério: usa smtp e preenche MAIL_HOST, MAIL_PORT, MAIL_USERNAME, MAIL_PASSWORD
# Para testes: Mailtrap.io (cria conta grátis e cola aqui as credenciais)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Conta fixa CEO: este utilizador não pode ter papel alterado nem ser desativado (evita bloquear acesso).
# Definir por ID ou por email (basta um).
# FIXED_CEO_USER_ID=1
# FIXED_CEO_EMAIL=ceo@empresa.com

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
